<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="#ffffff"
    tools:context="com.example.goktu.panic.Main4Activity">

    <Switch
        android:id="@+id/sw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchGPS"
        android:text="Konum Servisleri"
        android:textSize="17dp"
        android:layout_above="@+id/settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17sp"
        />

    <TextView
        android:id="@+id/tw_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/icon"
        android:onClick="doOp"
        android:id="@+id/btn"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acil durum anında yakınlarınıza haber vermek istediğinizde, panik butonuna dokunmanız yeterli."
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginBottom="31dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/sw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings"
        android:text="Ayarlar"
        android:onClick="account"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/refresh"
        android:background="@drawable/refresh_icon"
        android:onClick="setText"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
